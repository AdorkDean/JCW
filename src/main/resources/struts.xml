<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 配置编码格式为UTF-8 -->
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <!-- URL后自动加入参数不启用 -->
    <constant name="struts.url.includeParams" value="none" /> 
    <!-- 不启用Struts2自带主题样式 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- 修改默认后缀 -->
    <!-- <constant name="struts.action.extension" value="shtml" /> -->
    <!-- FreeMarker调用java静态方法或者静态常量的方法配置 -->
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>
	<!-- <constant name="struts.convention.action.name.separator" value="-" />  -->
    <!--指定包名作为Action文件夹路径的根-->
    <constant name="struts.convention.action.packages" value="com.hkpj.jcw"/>
    <!--在指定包名含有value值的加载ACTION  deafault:action,actions,struts,struts2-->
    <constant name="struts.convention.package.locators" value="web"/>
    <!--页面查找的根目录 默认为:WEB-INF/content/-->
    <constant name="struts.convention.result.path" value="/WEB-INF/content"/>
    <constant name="struts.objectFactory" value="spring"/>
    <!--制定浏览器是否缓存静态资源-->
    <constant name="struts.serve.static.browserCache" value="false"/>
    <constant name="struts.freemarker.templatesCache.updateDelay" value="0"/>
    <!--指定类重新动态加载,不需求重启服务器-->
    <!-- <constant name="struts.devMode" value="true"/> -->

    <constant name="struts.convention.classes.reload" value="true"/>
    <!-- 加入Struts默认加载的文件 -->
    <include file="struts-default.xml"/>  
    <!-- <include file="struts-plugin.xml" /> -->
 
</struts>
